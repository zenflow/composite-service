{
  "name": "composite-service",
  "version": "0.1.0",
  "description": "Helps you run multiple services as one",
  "engines": {
    "node": ">=10"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.js.map",
    "dist/http-gateway-server.js",
    "dist/http-gateway-server.js.map",
    "dist/**/*.d.ts",
    "src"
  ],
  "scripts": {
    "_build": "tsdx --target node --format cjs --entry src/index.ts --entry src/http-gateway/server.ts",
    "build": "yarn _build build",
    "build-watch": "yarn _build watch",
    "_test": "tsdx test --runInBand",
    "test": "yarn _test --ci",
    "test-watch": "yarn _test --watch",
    "lint": "tsdx lint",
    "lint-fix": "tsdx lint --fix",
    "extract-api": "api-extractor run --local",
    "check-api": "api-extractor run",
    "document-api": "node scripts/document-api.js",
    "_website": "yarn document-api && cd website && yarn && yarn",
    "start-website": "yarn _website start",
    "build-website": "yarn _website build",
    "deploy-website": "yarn _website deploy",
    "prepublishOnly": "yarn lint && yarn build && yarn test && yarn check-api"
  },
  "dependencies": {
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.4",
    "map-stream": "0.0.7",
    "merge-stream": "^2.0.0",
    "serialize-javascript": "^4.0.0",
    "split": "^1.0.1",
    "tcp-port-used": "^1.0.1"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.8.20",
    "@microsoft/api-extractor": "^7.8.12",
    "@types/express": "^4.17.6",
    "@types/merge-stream": "^1.1.2",
    "@types/serialize-javascript": "^1.5.0",
    "@types/split": "^1.0.0",
    "@types/tcp-port-used": "^1.0.0",
    "isomorphic-unfetch": "^3.0.0",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "license": "MIT",
  "author": {
    "name": "Matthew Francis Brunetti",
    "email": "zenflow87@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zenflow/composite-service.git"
  },
  "bugs": {
    "url": "https://github.com/zenflow/composite-service/issues"
  },
  "homepage": "https://github.com/zenflow/composite-service#readme",
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
